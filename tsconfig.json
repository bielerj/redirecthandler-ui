{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "rootDir": "./Resources/Private/JavaScript",
    "typeRoots": ["./Resources/Private/JavaScript/typings"]
  },
  "include": [
    "./Resources/Private/JavaScript/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
